{
  "name": "Search issues",
  "enabledForApps": false,
  "method": "GET",
  "path": "/legacy/issues/search/:owner/:repository/:state/:keyword",
  "params": [
    {
      "name": "owner",
      "type": "string",
      "required": true,
      "description": "",
      "location": "path"
    },
    {
      "name": "repository",
      "type": "string",
      "required": true,
      "description": "",
      "location": "path"
    },
    {
      "name": "state",
      "type": "string",
      "description": "Indicates the state of the issues to return. Can be either `open` or `closed`.",
      "required": true,
      "enum": [
        "open",
        "closed"
      ],
      "location": "path"
    },
    {
      "name": "keyword",
      "type": "string",
      "description": "The search term.",
      "required": true,
      "location": "path"
    }
  ],
  "description": "Find issues by state and keyword.",
  "documentationUrl": "https://developer.github.com/v3/search/legacy/#search-issues"
}
