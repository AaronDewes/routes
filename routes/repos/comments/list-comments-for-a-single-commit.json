{
  "name": "List comments for a single commit",
  "enabledForApps": true,
  "method": "GET",
  "path": "/repos/:owner/:repo/commits/:ref/comments",
  "params": [
    {
      "name": "owner",
      "type": "string",
      "required": true,
      "description": "",
      "location": "path"
    },
    {
      "name": "repo",
      "type": "string",
      "required": true,
      "description": "",
      "location": "path"
    },
    {
      "name": "ref",
      "type": "string",
      "required": true,
      "description": "",
      "location": "path"
    },
    {
      "name": "per_page",
      "type": "integer",
      "required": false,
      "description": "Results per page (max 100)",
      "default": 30,
      "location": "query"
    },
    {
      "name": "page",
      "type": "integer",
      "required": false,
      "description": "Page number of the results to fetch.",
      "default": 1,
      "location": "query"
    }
  ],
  "description": "",
  "documentationUrl": "https://developer.github.com/v3/repos/comments/#list-comments-for-a-single-commit"
}
